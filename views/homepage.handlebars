
{{#each posts as |post|}}
<div class="row align-center mb-6 border">
  <div class="col-md-6 bg-dark">
    <p class="text-light">{{post.post_title}}</p>
  </div>
  <div class="col-md-6 bg-dark">
    <p class="text-light">{{post.created_on}}</p>
  </div>
</div>
  <div class="row align-center mb-5">
  <div class="col-md-12">
    <p>{{post.content_details}}</p>
  </div>
</div>
{{/each}}